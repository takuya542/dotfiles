alias vi='vim'
alias vm='vim'
alias vmi='vim'
alias gvi='gvim'
alias gv='gvim'
alias path='echo $PATH'
alias df='df -h'
alias du='du -m | sort -n | tail'
alias nkf='nkf -g '
alias grep='grep -a --color'
alias ls='ls -G'
alias cdd='cd ../'
alias cddd='cd ../../'
alias cdddd='cd ../../../'
alias g='git'
alias ack='ag'
alias ll='ls -la'

function gvim () {
  vim $(ag $@ | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
}
