# .zsh_mainにキーバインド設定

# 引数で与えた文字列を含むファイル一覧を表示、選択したファイルをvimで開く
function pvim () {
  if [ "$1" = "" ]; then
    echo "Usage: pvim [PATTERN]"
    return
  else
    vim $( ag $@ | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
  fi
}

# 引数で与えた文字列を含むファイル一覧を表示、選択したファイルをvimで開く
function pless () {
  if [ "$1" = "" ]; then
    echo "Usage: pless [PATTERN]"
    return
  else
    ag $@ \
      | anyframe-selector-auto \
      | cut -d ':' -f01 \
      | anyframe-action-execute less
  fi
}


# セッション一覧からアタッチ先を選択,アタッチする
function pscreen() {
  screen -ls | grep -i "Detached" > /dev/null 2>&1
  if [ $? -eq 0  ]; then
    screen -ls \
      | anyframe-selector-auto \
      | cut -d '.' -f01 | sed -e 's/^\t//g' \
      | anyframe-action-execute screen -R
  else
    echo "No Detached Sockets found"
    return
  fi
}

