# 引数で与えた文字列を含むファイル一覧を表示、選択したファイルをvimで開く
# Usage: pvim
# Usage: pless hogehoge /path/to/dir
function pvim () {

  # 引数無しの場合
  if [ $# -eq 0 ]; then
    \vim $( ag -l ./ | anyframe-selector-auto )

  # 文字列とPathが指定されてる場合
  elif [ $# -eq 2 ]; then

    # path確認
    if [ ! -e $2 ]; then
      echo "No Path Matched to Grep $2"
      return
    fi

    # 対処ファイルが存在するか確認
    found_file_num=`ag $1 $2 | wc -l`
    if [ ${found_file_num} -ne 0 ]; then
      vim $( ag $1 $2 | peco --query "$LBUFFER" | awk -F : '{print "-c " $2 " " $1}')
    else
      echo "No File Matched to Open"
      return
    fi

  else

    echo "Usage: pvim [PATTERN] [PATH]"
    return

  fi
}

# 引数で与えた文字列を含むファイル一覧を表示、選択したファイルをvimで開く
# Usage: pless hogehoge /path/to/dir

function pless () {

  if [ $# -eq 2 ]; then

    # path確認
    if [ ! -e $2 ]; then
      echo "No Path Matched to Grep $2"
      return
    fi

    # 対処ファイルが存在するか確認
    found_file_num=`ag -l $1 $2 | wc -l`
    if [ ${found_file_num} -eq 0 ]; then
      echo "No File Matched to Open"
      return
    fi

    ag $1 $2 \
      | anyframe-selector-auto \
      | cut -d ':' -f01 \
      | anyframe-action-execute less

  else

    echo "Usage: pless [PATTERN] [PATh]"
    return

  fi
}


# セッション一覧からアタッチ先を選択,アタッチする
# Ctr + ]
function pscreen() {
  screen -ls | grep -i "Detached" > /dev/null 2>&1
  if [ $? -eq 0  ]; then
    screen -ls \
      | anyframe-selector-auto \
      | cut -d '.' -f01 | sed -e 's/^\t//g' \
      | anyframe-action-execute screen -R
  else
    echo "No Detached Sockets found"
    return
  fi
}

function pssh() {
  aws route53 list-resource-record-sets --hosted-zone-id Z3P7MD0UGV1GC1 | jq '.ResourceRecordSets[]' | jq 'select(.Type == "A")' | jq -r '.Name' \
    | anyframe-selector-auto \
    | anyframe-action-execute ssh
}


